{
    "openapi": "3.0.0",
    "info": {
        "title": "Profiler Profile API",
        "description": "API for managing Client Profiles, including creation, updates, pagination, and dashboard metrics.",
        "version": "2.0.0",
        "contact": {
            "name": "API Support"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v2/profiler/profiles",
            "description": "Local Development Server"
        }
    ],
    "tags": [
        {
            "name": "Profiles",
            "description": "Operations related to profiler profiles"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Get all profiles (Legacy)",
                "description": "Retrieve all profiler profiles without pagination.",
                "responses": {
                    "200": {
                        "description": "Profiles retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseList"
                                }
                            }
                        }
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            },
            "post": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Create a new profile",
                "description": "Create a new profiler profile for a client and bank.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateProfileInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Profile created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseSingle"
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#/components/responses/ValidationError"
                    },
                    "500": {
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            },
            "put": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Update a profile",
                "description": "Update details of an existing profiler profile.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateProfileInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Profile updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseSingle"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "422": {
                        "$ref": "#/components/responses/ValidationError"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Delete a profile",
                "description": "Delete a profiler profile. Only allowed if no transactions exist.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "id"
                                ],
                                "properties": {
                                    "id": {
                                        "type": "integer",
                                        "description": "ID of the profile to delete"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Profile deleted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseNoData"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Database Error (Likely existing transactions)",
                        "$ref": "#/components/responses/InternalError"
                    }
                }
            }
        },
        "/paginated": {
            "get": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Get paginated profiles",
                "description": "Retrieve profiles with advanced filtering, search, and pagination.",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 100,
                            "default": 50
                        }
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search in client name, bank name, card number, or notes",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "client_id",
                        "in": "query",
                        "description": "Filter by client ID (single ID or comma-separated list '1,2,3')",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "bank_id",
                        "in": "query",
                        "description": "Filter by bank ID (single ID or comma-separated list '1,2,3')",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Filter by status (active/done). Supports comma-separated list.",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "carry_forward_enabled",
                        "in": "query",
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "has_positive_balance",
                        "in": "query",
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "has_negative_balance",
                        "in": "query",
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "balance_greater_than",
                        "in": "query",
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "balance_less_than",
                        "in": "query",
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "created_at_start",
                        "in": "query",
                        "description": "Filter profiles created on or after this date (YYYY-MM-DD)",
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2024-01-01"
                        }
                    },
                    {
                        "name": "created_at_end",
                        "in": "query",
                        "description": "Filter profiles created on or before this date (YYYY-MM-DD)",
                        "schema": {
                            "type": "string",
                            "format": "date",
                            "example": "2024-12-31"
                        }
                    },
                    {
                        "name": "pre_planned_deposit_amount",
                        "in": "query",
                        "description": "Filter by exact pre-planned deposit amount",
                        "schema": {
                            "type": "number",
                            "example": 50000
                        }
                    },
                    {
                        "name": "min_deposit_amount",
                        "in": "query",
                        "description": "Filter profiles with pre-planned deposit amount greater than or equal to this value",
                        "schema": {
                            "type": "number",
                            "example": 10000
                        }
                    },
                    {
                        "name": "max_deposit_amount",
                        "in": "query",
                        "description": "Filter profiles with pre-planned deposit amount less than or equal to this value",
                        "schema": {
                            "type": "number",
                            "example": 100000
                        }
                    },
                    {
                        "name": "sort_by",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "client_name",
                                "bank_name",
                                "credit_card_number",
                                "pre_planned_deposit_amount",
                                "current_balance",
                                "total_withdrawn_amount",
                                "remaining_balance",
                                "created_at",
                                "transaction_count"
                            ]
                        }
                    },
                    {
                        "name": "sort_order",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ],
                            "default": "desc"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Profiles retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PaginatedResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#/components/responses/ValidationError"
                    }
                }
            }
        },
        "/dashboard": {
            "get": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Get dashboard profiles",
                "description": "Retrieve active profiles with positive balances.",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 100,
                            "default": 50
                        }
                    },
                    {
                        "name": "client_id",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "bank_id",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Dashboard profiles retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PaginatedResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/autocomplete": {
            "get": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Get profiles for autocomplete",
                "description": "Simplified profile list for dropdowns.",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "client_id",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "active",
                                "done"
                            ]
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 10,
                            "default": 5
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Autocomplete data retrieved",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/SuccessResponseBase"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "properties": {
                                                        "data": {
                                                            "type": "array",
                                                            "items": {
                                                                "$ref": "#/components/schemas/AutocompleteProfile"
                                                            }
                                                        },
                                                        "total_count": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/client/{clientId}": {
            "get": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Get profiles by Client ID",
                "parameters": [
                    {
                        "name": "clientId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Profiles retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseList"
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#/components/responses/ValidationError"
                    }
                }
            }
        },
        "/{id}": {
            "get": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Get profile by ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Profile retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseSingle"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "422": {
                        "$ref": "#/components/responses/ValidationError"
                    }
                }
            }
        },
        "/mark-done": {
            "put": {
                "tags": [
                    "Profiles"
                ],
                "summary": "Mark profile as done",
                "description": "Update profile status to 'done'.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "id"
                                ],
                                "properties": {
                                    "id": {
                                        "type": "integer",
                                        "description": "Profile ID"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Profile marked as done successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponseSingle"
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    },
                    "422": {
                        "$ref": "#/components/responses/ValidationError"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ProfilerProfile": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "client_id": {
                        "type": "integer"
                    },
                    "bank_id": {
                        "type": "integer"
                    },
                    "credit_card_number": {
                        "type": "string"
                    },
                    "pre_planned_deposit_amount": {
                        "type": "number"
                    },
                    "current_balance": {
                        "type": "number"
                    },
                    "total_withdrawn_amount": {
                        "type": "number"
                    },
                    "carry_forward_enabled": {
                        "type": "boolean"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "active",
                            "done"
                        ]
                    },
                    "notes": {
                        "type": "string",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "client_name": {
                        "type": "string"
                    },
                    "bank_name": {
                        "type": "string"
                    },
                    "remaining_balance": {
                        "type": "number"
                    },
                    "transaction_count": {
                        "type": "integer"
                    }
                }
            },
            "AutocompleteProfile": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "client_name": {
                        "type": "string"
                    },
                    "bank_name": {
                        "type": "string"
                    },
                    "credit_card_number": {
                        "type": "string"
                    },
                    "remaining_balance": {
                        "type": "number"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "active",
                            "done"
                        ]
                    }
                }
            },
            "CreateProfileInput": {
                "type": "object",
                "required": [
                    "client_id",
                    "bank_id",
                    "credit_card_number",
                    "pre_planned_deposit_amount"
                ],
                "properties": {
                    "client_id": {
                        "type": "integer"
                    },
                    "bank_id": {
                        "type": "integer"
                    },
                    "credit_card_number": {
                        "type": "string",
                        "minLength": 1
                    },
                    "pre_planned_deposit_amount": {
                        "type": "number",
                        "minimum": 0
                    },
                    "carry_forward_enabled": {
                        "type": "boolean"
                    },
                    "notes": {
                        "type": "string"
                    }
                }
            },
            "UpdateProfileInput": {
                "type": "object",
                "required": [
                    "id"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "bank_id": {
                        "type": "integer"
                    },
                    "credit_card_number": {
                        "type": "string"
                    },
                    "pre_planned_deposit_amount": {
                        "type": "number",
                        "minimum": 0
                    },
                    "carry_forward_enabled": {
                        "type": "boolean"
                    },
                    "notes": {
                        "type": "string"
                    }
                }
            },
            "SuccessResponseBase": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "successCode": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "statusCode": {
                        "type": "integer",
                        "example": 200
                    }
                }
            },
            "SuccessResponseSingle": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/SuccessResponseBase"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "$ref": "#/components/schemas/ProfilerProfile"
                            }
                        }
                    }
                ]
            },
            "SuccessResponseList": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/SuccessResponseBase"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/ProfilerProfile"
                                }
                            }
                        }
                    }
                ]
            },
            "SuccessResponseNoData": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/SuccessResponseBase"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "data": {
                                "type": "null"
                            }
                        }
                    }
                ]
            },
            "PaginatedResponse": {
                "allOf": [
                    {
                        "$ref": "#/components/schemas/SuccessResponseList"
                    },
                    {
                        "type": "object",
                        "properties": {
                            "pagination": {
                                "type": "object",
                                "properties": {
                                    "current_page": {
                                        "type": "integer"
                                    },
                                    "per_page": {
                                        "type": "integer"
                                    },
                                    "total_count": {
                                        "type": "integer"
                                    },
                                    "total_pages": {
                                        "type": "integer"
                                    },
                                    "has_next_page": {
                                        "type": "boolean"
                                    },
                                    "has_previous_page": {
                                        "type": "boolean"
                                    }
                                }
                            },
                            "filters_applied": {
                                "type": "object"
                            },
                            "search_applied": {
                                "type": "string"
                            },
                            "sort_applied": {
                                "type": "object",
                                "properties": {
                                    "sort_by": {
                                        "type": "string"
                                    },
                                    "sort_order": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                ]
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": false
                    },
                    "error": {
                        "type": "object",
                        "properties": {
                            "statusCode": {
                                "type": "integer"
                            },
                            "message": {
                                "type": "string"
                            },
                            "errorCode": {
                                "type": "string"
                            },
                            "timestamp": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "details": {
                                "type": "object"
                            },
                            "path": {
                                "type": "string"
                            },
                            "method": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "responses": {
            "ValidationError": {
                "description": "Validation Error (422)",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ErrorResponse"
                        },
                        "example": {
                            "success": false,
                            "error": {
                                "statusCode": 422,
                                "message": "Limit must be between 1 and 100",
                                "errorCode": "VALIDATION_ERROR",
                                "details": {
                                    "field": "limit",
                                    "value": "150"
                                }
                            }
                        }
                    }
                }
            },
            "NotFound": {
                "description": "Resource Not Found (404)",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ErrorResponse"
                        },
                        "example": {
                            "success": false,
                            "error": {
                                "statusCode": 404,
                                "message": "Profiler profile with ID 999 not found",
                                "errorCode": "NOT_FOUND"
                            }
                        }
                    }
                }
            },
            "InternalError": {
                "description": "Internal Server Error (500)",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/ErrorResponse"
                        },
                        "example": {
                            "success": false,
                            "error": {
                                "statusCode": 500,
                                "message": "Internal Server Error",
                                "errorCode": "INTERNAL_SERVER_ERROR"
                            }
                        }
                    }
                }
            }
        }
    }
}