{
    "openapi": "3.0.0",
    "info": {
        "title": "Fin-Ops API",
        "version": "1.0.0",
        "description": "API documentation for the Fin-Ops banking application. This specification covers the Bank management module and standard response formats.",
        "contact": {
            "name": "API Support"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1",
            "description": "Local Development Server"
        }
    ],
    "paths": {
        "/banks": {
            "get": {
                "summary": "Get all banks (Legacy)",
                "description": "Retrieve a list of all banks with transaction counts. Note: This endpoint does not support pagination.",
                "tags": [
                    "Banks"
                ],
                "responses": {
                    "200": {
                        "description": "Banks retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Bank"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new bank",
                "tags": [
                    "Banks"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/BankInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Bank created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "BANK_CREATED"
                                                },
                                                "data": {
                                                    "$ref": "#/components/schemas/Bank"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update an existing bank",
                "tags": [
                    "Banks"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/BankUpdateInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Bank updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "BANK_UPDATED"
                                                },
                                                "data": {
                                                    "$ref": "#/components/schemas/Bank"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Bank not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete a bank",
                "description": "Delete a bank by ID. Note: This endpoint expects the ID in the request BODY, not the URL path.",
                "tags": [
                    "Banks"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/DeleteBankInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Bank deleted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "BANK_DELETED"
                                                },
                                                "data": {
                                                    "type": "object",
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Bank not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/banks/paginated": {
            "get": {
                "summary": "Get paginated banks",
                "description": "Retrieve banks with pagination, search, and sorting capabilities.",
                "tags": [
                    "Banks"
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        },
                        "description": "Page number (positive integer)"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 50,
                            "minimum": 1,
                            "maximum": 100
                        },
                        "description": "Number of records per page (1-100)"
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Search term for bank name"
                    },
                    {
                        "name": "sort_by",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "name",
                                "create_date",
                                "transaction_count"
                            ],
                            "default": "name"
                        },
                        "description": "Field to sort by"
                    },
                    {
                        "name": "sort_order",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ],
                            "default": "asc"
                        },
                        "description": "Sort order"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated banks retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "properties": {
                                                        "data": {
                                                            "type": "array",
                                                            "items": {
                                                                "$ref": "#/components/schemas/Bank"
                                                            }
                                                        },
                                                        "pagination": {
                                                            "$ref": "#/components/schemas/PaginatedMeta"
                                                        },
                                                        "search_applied": {
                                                            "type": "string"
                                                        },
                                                        "sort_applied": {
                                                            "type": "object",
                                                            "properties": {
                                                                "sort_by": {
                                                                    "type": "string"
                                                                },
                                                                "sort_order": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/banks/autocomplete": {
            "get": {
                "summary": "Get banks for autocomplete",
                "description": "Lightweight endpoint to search banks for dropdowns.",
                "tags": [
                    "Banks"
                ],
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Search term"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 5,
                            "maximum": 10
                        },
                        "description": "Number of results to return (max 10)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Autocomplete data retrieved",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "properties": {
                                                        "data": {
                                                            "type": "array",
                                                            "items": {
                                                                "$ref": "#/components/schemas/BankAutocompleteItem"
                                                            }
                                                        },
                                                        "search_query": {
                                                            "type": "string"
                                                        },
                                                        "result_count": {
                                                            "type": "integer"
                                                        },
                                                        "limit_applied": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Bank": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "HDFC Bank"
                    },
                    "create_date": {
                        "type": "string",
                        "format": "date",
                        "nullable": true
                    },
                    "create_time": {
                        "type": "string",
                        "format": "time",
                        "nullable": true
                    },
                    "modify_date": {
                        "type": "string",
                        "format": "date",
                        "nullable": true
                    },
                    "modify_time": {
                        "type": "string",
                        "format": "time",
                        "nullable": true
                    },
                    "transaction_count": {
                        "type": "integer",
                        "description": "Derived count of transactions associated with this bank",
                        "example": 150
                    }
                }
            },
            "BankAutocompleteItem": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "HDFC Bank"
                    }
                }
            },
            "BankInput": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the bank",
                        "example": "State Bank of India"
                    }
                }
            },
            "BankUpdateInput": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "State Bank of India Updated"
                    }
                }
            },
            "DeleteBankInput": {
                "type": "object",
                "required": [
                    "id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    }
                }
            },
            "StandardResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "Operation completed successfully"
                    },
                    "successCode": {
                        "type": "string",
                        "example": "OPERATION_SUCCESS"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "statusCode": {
                        "type": "integer",
                        "example": 200
                    }
                }
            },
            "PaginatedMeta": {
                "type": "object",
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 50
                    },
                    "total_count": {
                        "type": "integer",
                        "example": 100
                    },
                    "total_pages": {
                        "type": "integer",
                        "example": 2
                    },
                    "has_next_page": {
                        "type": "boolean",
                        "example": true
                    },
                    "has_previous_page": {
                        "type": "boolean",
                        "example": false
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": false
                    },
                    "error": {
                        "type": "object",
                        "properties": {
                            "statusCode": {
                                "type": "integer",
                                "example": 400
                            },
                            "message": {
                                "type": "string",
                                "example": "Validation failed"
                            },
                            "errorCode": {
                                "type": "string",
                                "example": "VALIDATION_ERROR"
                            },
                            "timestamp": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "details": {
                                "type": "object"
                            },
                            "path": {
                                "type": "string"
                            },
                            "method": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}