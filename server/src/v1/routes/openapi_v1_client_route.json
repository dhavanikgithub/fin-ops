{
    "openapi": "3.0.0",
    "info": {
        "title": "Fin-Ops API - Client Module",
        "version": "1.0.0",
        "description": "API documentation for the Fin-Ops banking application. This specification details the Client management module, including pagination, search, validation, and autocomplete features.",
        "contact": {
            "name": "API Support"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1",
            "description": "Local Development Server"
        }
    ],
    "paths": {
        "/clients": {
            "get": {
                "summary": "Get all clients (Legacy)",
                "description": "Retrieve a list of all clients with transaction counts. Note: This endpoint does not support pagination.",
                "tags": [
                    "Clients"
                ],
                "responses": {
                    "200": {
                        "description": "Clients retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "CLIENTS_RETRIEVED"
                                                },
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Client"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new client",
                "tags": [
                    "Clients"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ClientInput"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Client created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "CLIENT_CREATED"
                                                },
                                                "data": {
                                                    "$ref": "#/components/schemas/Client"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update an existing client",
                "tags": [
                    "Clients"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ClientUpdateInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Client updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "CLIENT_UPDATED"
                                                },
                                                "data": {
                                                    "$ref": "#/components/schemas/Client"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Client not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete a client",
                "description": "Delete a client by ID. Note: This endpoint expects the ID in the request BODY, not the URL path.",
                "tags": [
                    "Clients"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/DeleteClientInput"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Client deleted successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "CLIENT_DELETED"
                                                },
                                                "data": {
                                                    "type": "object",
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Client not found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/clients/paginated": {
            "get": {
                "summary": "Get paginated clients",
                "description": "Retrieve clients with pagination, search (name, email, contact, address), and sorting capabilities.",
                "tags": [
                    "Clients"
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 1
                        },
                        "description": "Page number (positive integer)"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 50,
                            "minimum": 1,
                            "maximum": 100
                        },
                        "description": "Number of records per page (1-100)"
                    },
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Search term for client name, email, contact, or address"
                    },
                    {
                        "name": "sort_by",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "name",
                                "email",
                                "contact",
                                "create_date",
                                "transaction_count"
                            ],
                            "default": "name"
                        },
                        "description": "Field to sort by"
                    },
                    {
                        "name": "sort_order",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ],
                            "default": "asc"
                        },
                        "description": "Sort order"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Paginated clients retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "properties": {
                                                        "data": {
                                                            "type": "array",
                                                            "items": {
                                                                "$ref": "#/components/schemas/Client"
                                                            }
                                                        },
                                                        "pagination": {
                                                            "$ref": "#/components/schemas/PaginatedMeta"
                                                        },
                                                        "search_applied": {
                                                            "type": "string"
                                                        },
                                                        "sort_applied": {
                                                            "type": "object",
                                                            "properties": {
                                                                "sort_by": {
                                                                    "type": "string"
                                                                },
                                                                "sort_order": {
                                                                    "type": "string"
                                                                }
                                                            }
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/clients/autocomplete": {
            "get": {
                "summary": "Get clients for autocomplete",
                "description": "Lightweight endpoint to search clients for dropdowns.",
                "tags": [
                    "Clients"
                ],
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        },
                        "description": "Search term"
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "default": 5,
                            "maximum": 10
                        },
                        "description": "Number of results to return (max 10)"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Autocomplete data retrieved",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "data": {
                                                    "type": "object",
                                                    "properties": {
                                                        "data": {
                                                            "type": "array",
                                                            "items": {
                                                                "$ref": "#/components/schemas/ClientAutocompleteItem"
                                                            }
                                                        },
                                                        "search_query": {
                                                            "type": "string"
                                                        },
                                                        "result_count": {
                                                            "type": "integer"
                                                        },
                                                        "limit_applied": {
                                                            "type": "integer"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/clients/{id}": {
            "get": {
                "summary": "Get client by ID",
                "description": "Retrieve a specific client by their unique ID.",
                "tags": [
                    "Clients"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        },
                        "description": "Unique ID of the client"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Client retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "CLIENTS_RETRIEVED"
                                                },
                                                "data": {
                                                    "$ref": "#/components/schemas/Client"
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid Client ID",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/clients/name/{name}": {
            "get": {
                "summary": "Get client by name",
                "description": "Retrieve a specific client by their name.",
                "tags": [
                    "Clients"
                ],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Name of the client"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Client retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "allOf": [
                                        {
                                            "$ref": "#/components/schemas/StandardResponse"
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "successCode": {
                                                    "example": "CLIENTS_RETRIEVED"
                                                },
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "$ref": "#/components/schemas/Client"
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Client name is required or invalid",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Client": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 205
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "nullable": true,
                        "example": "john.doe@example.com"
                    },
                    "contact": {
                        "type": "string",
                        "nullable": true,
                        "pattern": "^[6-9]\\d{9}$",
                        "example": "9876543210"
                    },
                    "address": {
                        "type": "string",
                        "nullable": true,
                        "example": "123 Main St, Mumbai, India"
                    },
                    "create_date": {
                        "type": "string",
                        "format": "date",
                        "nullable": true
                    },
                    "create_time": {
                        "type": "string",
                        "format": "time",
                        "nullable": true
                    },
                    "modify_date": {
                        "type": "string",
                        "format": "date",
                        "nullable": true
                    },
                    "modify_time": {
                        "type": "string",
                        "format": "time",
                        "nullable": true
                    },
                    "transaction_count": {
                        "type": "integer",
                        "description": "Derived count of transactions associated with this client",
                        "example": 12
                    }
                }
            },
            "ClientAutocompleteItem": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 205
                    },
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    }
                }
            },
            "ClientInput": {
                "type": "object",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the client",
                        "example": "Jane Smith"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "nullable": true,
                        "description": "Email address (optional)",
                        "example": "jane.smith@example.com"
                    },
                    "contact": {
                        "type": "string",
                        "nullable": true,
                        "pattern": "^[6-9]\\d{9}$",
                        "description": "10-digit Indian mobile number starting with 6-9 (optional)",
                        "example": "9988776655"
                    },
                    "address": {
                        "type": "string",
                        "nullable": true,
                        "description": "Physical address (optional)",
                        "example": "456 Park Ave, Delhi"
                    }
                }
            },
            "ClientUpdateInput": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 205
                    },
                    "name": {
                        "type": "string",
                        "example": "Jane Smith Updated"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "nullable": true,
                        "example": "jane.new@example.com"
                    },
                    "contact": {
                        "type": "string",
                        "nullable": true,
                        "pattern": "^[6-9]\\d{9}$",
                        "example": "8877665544"
                    },
                    "address": {
                        "type": "string",
                        "nullable": true,
                        "example": "789 New Road, Bangalore"
                    }
                }
            },
            "DeleteClientInput": {
                "type": "object",
                "required": [
                    "id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 205
                    }
                }
            },
            "StandardResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "Operation completed successfully"
                    },
                    "successCode": {
                        "type": "string",
                        "example": "OPERATION_SUCCESS"
                    },
                    "timestamp": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "statusCode": {
                        "type": "integer",
                        "example": 200
                    }
                }
            },
            "PaginatedMeta": {
                "type": "object",
                "properties": {
                    "current_page": {
                        "type": "integer",
                        "example": 1
                    },
                    "per_page": {
                        "type": "integer",
                        "example": 50
                    },
                    "total_count": {
                        "type": "integer",
                        "example": 150
                    },
                    "total_pages": {
                        "type": "integer",
                        "example": 3
                    },
                    "has_next_page": {
                        "type": "boolean",
                        "example": true
                    },
                    "has_previous_page": {
                        "type": "boolean",
                        "example": false
                    }
                }
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": false
                    },
                    "error": {
                        "type": "object",
                        "properties": {
                            "statusCode": {
                                "type": "integer",
                                "example": 400
                            },
                            "message": {
                                "type": "string",
                                "example": "Validation failed"
                            },
                            "errorCode": {
                                "type": "string",
                                "example": "VALIDATION_ERROR"
                            },
                            "timestamp": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "details": {
                                "type": "object"
                            },
                            "path": {
                                "type": "string"
                            },
                            "method": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}